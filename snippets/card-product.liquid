{% comment %}
  R2P Product Card
  Renders a product card with dark aesthetic, 3:4 ratio, hover lift + Quick Add

  Accepts:
  - card_product: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} "square" or "portrait". Default "portrait"
  - show_secondary_image: {Boolean} Show secondary image on hover
  - show_vendor: {Boolean} Show product vendor
  - show_rating: {Boolean} Show rating
  - extend_height: {Boolean}
  - lazy_load: {Boolean} Default true
  - skip_styles: {Boolean}
  - quick_add: {String} "standard" or "bulk"
  - section_id: {String}
  - horizontal_class: {Boolean}
  - horizontal_quick_add: {Boolean}
  - placeholder_image: {String}
{% endcomment %}

{%- unless skip_styles -%}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'quick-order-list.css' | asset_url | stylesheet_tag }}
  {{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

<style>
  .r2p-card {
    position: relative;
    background: var(--r2p-surface);
    border: 1px solid var(--r2p-border);
    border-radius: 0;
    overflow: hidden;
    transition: transform var(--duration-transition) var(--ease-out-expo),
                border-color var(--duration-transition) var(--ease-out-expo),
                box-shadow var(--duration-transition) var(--ease-out-expo);
    display: flex;
    flex-direction: column;
  }

  .r2p-card:hover {
    transform: translateY(-4px);
    border-color: var(--r2p-accent);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .r2p-card__media {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: var(--r2p-bg);
  }

  .r2p-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s var(--ease-out-expo);
  }

  .r2p-card:hover .r2p-card__media img {
    transform: scale(1.03);
  }

  .r2p-card__media-secondary {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity var(--duration-transition) var(--ease-out-expo);
  }

  .r2p-card:hover .r2p-card__media-secondary {
    opacity: 1;
  }

  .r2p-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 4px 8px;
    z-index: 2;
  }

  .r2p-card__badge--sold-out {
    background: var(--r2p-text);
    color: var(--r2p-black);
  }

  .r2p-card__badge--sale {
    background: var(--r2p-accent);
    color: var(--r2p-black);
  }

  .r2p-card__quick-add {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    transform: translateY(100%);
    transition: transform var(--duration-transition) var(--ease-out-expo);
  }

  .r2p-card:hover .r2p-card__quick-add {
    transform: translateY(0);
  }

  .r2p-card__quick-add-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 12px;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    background: var(--r2p-accent);
    color: var(--r2p-black);
    border: none;
    border-radius: 0;
    cursor: pointer;
    transition: background var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-card__quick-add-btn:hover {
    background: #b8ee00;
  }

  .r2p-card__quick-add-btn:disabled {
    background: var(--r2p-muted);
    cursor: not-allowed;
  }

  .r2p-card__info {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex: 1;
  }

  .r2p-card__drop-label {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--r2p-accent);
  }

  .r2p-card__title {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 500;
    line-height: 1.3;
    color: var(--r2p-text);
    margin: 0;
  }

  .r2p-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .r2p-card__price {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--r2p-muted);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .r2p-card__price-sale {
    color: var(--r2p-accent);
  }

  .r2p-card__price-compare {
    text-decoration: line-through;
    color: var(--r2p-muted);
    opacity: 0.6;
  }

  .r2p-card__vendor {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--r2p-muted);
  }

  /* Placeholder card */
  .r2p-card--placeholder .r2p-card__media {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--r2p-border);
  }

  .r2p-card--placeholder .placeholder-svg {
    width: 60%;
    opacity: 0.3;
  }
</style>

{%- if card_product and card_product != empty -%}
  <div class="r2p-card">
    <!-- Image -->
    <div class="r2p-card__media">
      {%- if card_product.featured_media -%}
        <a href="{{ card_product.url }}" aria-label="{{ card_product.title | escape }}" tabindex="-1">
          <img
            srcset="
              {%- if card_product.featured_media.width >= 360 -%}{{ card_product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if card_product.featured_media.width >= 533 -%}{{ card_product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
              {%- if card_product.featured_media.width >= 720 -%}{{ card_product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
              {%- if card_product.featured_media.width >= 940 -%}{{ card_product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
              {{ card_product.featured_media | image_url }} {{ card_product.featured_media.width }}w
            "
            src="{{ card_product.featured_media | image_url: width: 533 }}"
            sizes="(min-width: 990px) calc((100vw - 130px) / 3), (min-width: 750px) calc((100vw - 120px) / 2), calc(100vw - 40px)"
            alt="{{ card_product.featured_media.alt | escape }}"
            {% unless lazy_load == false %}loading="lazy"{% endunless %}
            width="{{ card_product.featured_media.width }}"
            height="{{ card_product.featured_media.height }}"
          >

          {%- if card_product.media[1] != null and show_secondary_image -%}
            <img
              class="r2p-card__media-secondary"
              srcset="
                {%- if card_product.media[1].width >= 360 -%}{{ card_product.media[1] | image_url: width: 360 }} 360w,{%- endif -%}
                {%- if card_product.media[1].width >= 533 -%}{{ card_product.media[1] | image_url: width: 533 }} 533w,{%- endif -%}
                {%- if card_product.media[1].width >= 720 -%}{{ card_product.media[1] | image_url: width: 720 }} 720w,{%- endif -%}
                {{ card_product.media[1] | image_url }} {{ card_product.media[1].width }}w
              "
              src="{{ card_product.media[1] | image_url: width: 533 }}"
              sizes="(min-width: 990px) calc((100vw - 130px) / 3), (min-width: 750px) calc((100vw - 120px) / 2), calc(100vw - 40px)"
              alt="{{ card_product.media[1].alt | escape }}"
              loading="lazy"
              width="{{ card_product.media[1].width }}"
              height="{{ card_product.media[1].height }}"
            >
          {%- endif -%}
        </a>
      {%- endif -%}

      <!-- Badges -->
      {%- if card_product.available == false -%}
        <span class="r2p-card__badge r2p-card__badge--sold-out">Sold Out</span>
      {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
        <span class="r2p-card__badge r2p-card__badge--sale">Sale</span>
      {%- endif -%}

      <!-- Quick Add (slides up on hover) -->
      {% if quick_add == 'standard' %}
        <div class="r2p-card__quick-add no-js-hidden">
          {%- assign product_form_id = 'quick-add-' | append: section_id | append: card_product.id -%}
          {%- liquid
            assign qty_rules = false
            if card_product.selected_or_first_available_variant.quantity_rule.min > 1 or card_product.selected_or_first_available_variant.quantity_rule.max != null or card_product.selected_or_first_available_variant.quantity_rule.increment > 1
              assign qty_rules = true
            endif
          -%}
          {%- if card_product.variants_count > 1 or qty_rules -%}
            <modal-opener data-modal="#QuickAdd-{{ card_product.id }}">
              <button
                id="{{ product_form_id }}-submit"
                type="submit"
                name="add"
                class="r2p-card__quick-add-btn"
                aria-haspopup="dialog"
                aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ card_product.id }}"
                data-product-url="{{ card_product.url }}"
              >
                Choose Options
              </button>
            </modal-opener>
            <quick-add-modal id="QuickAdd-{{ card_product.id }}" class="quick-add-modal">
              <div
                role="dialog"
                aria-label="{{ 'products.product.choose_product_options' | t: product_name: card_product.title | escape }}"
                aria-modal="true"
                class="quick-add-modal__content global-settings-popup"
                tabindex="-1"
              >
                <button
                  id="ModalClose-{{ card_product.id }}"
                  type="button"
                  class="quick-add-modal__toggle"
                  aria-label="{{ 'accessibility.close' | t }}"
                >
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </button>
                <div id="QuickAddInfo-{{ card_product.id }}" class="quick-add-modal__content-info"></div>
              </div>
            </quick-add-modal>
          {%- else -%}
            <product-form data-section-id="{{ section.id }}">
              {%- form 'product',
                card_product,
                id: product_form_id,
                class: 'form',
                novalidate: 'novalidate',
                data-type: 'add-to-cart-form'
              -%}
                <input
                  type="hidden"
                  name="id"
                  value="{{ card_product.selected_or_first_available_variant.id }}"
                  class="product-variant-id"
                  {% if card_product.selected_or_first_available_variant.available == false %}disabled{% endif %}
                >
                <button
                  id="{{ product_form_id }}-submit"
                  type="submit"
                  name="add"
                  class="r2p-card__quick-add-btn"
                  aria-haspopup="dialog"
                  aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ card_product.id }}"
                  aria-live="polite"
                  data-sold-out-message="true"
                  {% if card_product.selected_or_first_available_variant.available == false %}disabled{% endif %}
                >
                  {%- if card_product.selected_or_first_available_variant.available -%}
                    Quick Add
                  {%- else -%}
                    Sold Out
                  {%- endif -%}
                </button>
              {%- endform -%}
            </product-form>
          {%- endif -%}
        </div>
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="r2p-card__info">
      {%- if card_product.vendor and show_vendor -%}
        <span class="r2p-card__vendor">{{ card_product.vendor }}</span>
      {%- endif -%}

      <span class="r2p-card__drop-label">{{ card_product.type | default: 'R2P' }}</span>

      <h3 class="r2p-card__title" id="title-{{ section_id }}-{{ card_product.id }}">
        <a href="{{ card_product.url }}" id="CardLink-{{ section_id }}-{{ card_product.id }}">
          {{ card_product.title | escape }}
        </a>
      </h3>

      <div class="r2p-card__price">
        {%- if card_product.compare_at_price > card_product.price -%}
          <span class="r2p-card__price-sale">{{ card_product.price | money }}</span>
          <span class="r2p-card__price-compare">{{ card_product.compare_at_price | money }}</span>
        {%- else -%}
          <span>{{ card_product.price | money }}</span>
        {%- endif -%}
      </div>
    </div>
  </div>

{%- else -%}
  <!-- Placeholder Card -->
  <div class="r2p-card r2p-card--placeholder">
    <div class="r2p-card__media">
      {%- if placeholder_image -%}
        {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
      {%- else -%}
        {{ 'product-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    <div class="r2p-card__info">
      <span class="r2p-card__drop-label">R2P</span>
      <h3 class="r2p-card__title">
        <a role="link" aria-disabled="true">{{ 'onboarding.product_title' | t }}</a>
      </h3>
      <div class="r2p-card__price">
        {% render 'price', placeholder: true, show_compare_at_price: true %}
      </div>
    </div>
  </div>
{%- endif -%}
