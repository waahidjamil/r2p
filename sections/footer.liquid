{% comment %}theme-check-disable UndefinedObject{% endcomment %}
<!-- R2P Footer -->

{%- liquid
  assign has_social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign has_social_icons = false
  endif
-%}

<style>
  .r2p-footer {
    background: var(--r2p-bg);
    border-top: 1px solid var(--r2p-border);
    padding: 64px 0 0;
  }

  .r2p-footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
  }

  @media screen and (min-width: 750px) {
    .r2p-footer {
      padding: 80px 0 0;
    }

    .r2p-footer__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }

  @media screen and (min-width: 990px) {
    .r2p-footer {
      padding: 100px 0 0;
    }

    .r2p-footer__grid {
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
      gap: 48px;
    }
  }

  /* Brand Column */
  .r2p-footer__brand-logo {
    font-family: 'Space Grotesk', var(--font-body);
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--r2p-text);
    margin-bottom: 16px;
  }

  .r2p-footer__brand-quote {
    font-family: var(--font-body);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--r2p-muted);
    margin-bottom: 24px;
    max-width: 280px;
  }

  .r2p-footer__social {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .r2p-footer__social-link {
    color: var(--r2p-muted);
    transition: color var(--duration-hover) var(--ease-out-expo);
    display: flex;
    align-items: center;
  }

  .r2p-footer__social-link:hover {
    color: var(--r2p-accent);
  }

  .r2p-footer__social-link svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  /* Link Columns */
  .r2p-footer__column-heading {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--r2p-accent);
    margin-bottom: 20px;
  }

  .r2p-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .r2p-footer__link {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--r2p-muted);
    text-decoration: none;
    transition: color var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-footer__link:hover {
    color: var(--r2p-text);
  }

  /* Newsletter in footer */
  .r2p-footer__newsletter-form {
    display: flex;
    gap: 0;
    margin-top: 16px;
  }

  .r2p-footer__newsletter-input {
    flex: 1;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    color: var(--r2p-text);
    background: transparent;
    border: 1px solid var(--r2p-border);
    border-right: none;
    border-radius: 0;
    padding: 10px 12px;
    outline: none;
    transition: border-color var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-footer__newsletter-input:focus {
    border-color: var(--r2p-accent);
  }

  .r2p-footer__newsletter-input::placeholder {
    color: var(--r2p-muted);
  }

  .r2p-footer__newsletter-btn {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    background: var(--r2p-accent);
    color: var(--r2p-black);
    border: 1px solid var(--r2p-accent);
    border-radius: 0;
    padding: 10px 16px;
    cursor: pointer;
    transition: background var(--duration-hover) var(--ease-out-expo);
    white-space: nowrap;
  }

  .r2p-footer__newsletter-btn:hover {
    background: #b8ee00;
  }

  .r2p-footer__newsletter-success {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--r2p-accent);
    margin-top: 8px;
  }

  .r2p-footer__newsletter-error {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #ff4444;
    margin-top: 8px;
  }

  /* Bottom Bar */
  .r2p-footer__bottom {
    margin-top: 64px;
    padding: 24px 0;
    border-top: 1px solid var(--r2p-border);
  }

  .r2p-footer__bottom-inner {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .r2p-footer__bottom {
      margin-top: 80px;
    }

    .r2p-footer__bottom-inner {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .r2p-footer__copyright {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.04em;
    color: var(--r2p-muted);
    opacity: 0.6;
  }

  .r2p-footer__copyright a {
    color: inherit;
    text-decoration: none;
    transition: color var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-footer__copyright a:hover {
    color: var(--r2p-text);
  }

  .r2p-footer__policies {
    display: flex;
    gap: 20px;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
    justify-content: center;
  }

  .r2p-footer__policies a {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    letter-spacing: 0.04em;
    color: var(--r2p-muted);
    opacity: 0.6;
    text-decoration: none;
    transition: color var(--duration-hover) var(--ease-out-expo),
                opacity var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-footer__policies a:hover {
    color: var(--r2p-text);
    opacity: 1;
  }

  .r2p-footer__payment {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .r2p-footer__payment {
      justify-content: flex-end;
    }
  }

  .r2p-footer__payment .icon {
    width: 38px;
    height: 24px;
    opacity: 0.5;
    transition: opacity var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-footer__payment .icon:hover {
    opacity: 0.8;
  }

  /* Localization */
  .r2p-footer__localization {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
  }

  .r2p-footer__localization .localization-form {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--r2p-muted);
  }

  .r2p-footer__localization h2 {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.04em;
    color: var(--r2p-muted);
    margin: 0;
  }
</style>

<footer class="r2p-footer" aria-label="Site footer">
  <div class="r2p-page-width">
    <!-- 4-column Grid -->
    <div class="r2p-footer__grid r2p-reveal">

      <!-- Column 1: Brand -->
      <div class="r2p-footer__brand">
        <div class="r2p-footer__brand-logo">R2P</div>
        <p class="r2p-footer__brand-quote">
          {{ section.settings.brand_quote | default: "Built for the ones still on the road. Premium streetwear for the culture." }}
        </p>
        {%- if section.settings.show_social -%}
          <div class="r2p-footer__social">
            {%- if settings.social_instagram_link != blank -%}
              <a href="{{ settings.social_instagram_link }}" class="r2p-footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
              </a>
            {%- endif -%}
            {%- if settings.social_tiktok_link != blank -%}
              <a href="{{ settings.social_tiktok_link }}" class="r2p-footer__social-link" aria-label="TikTok" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.48V13a8.28 8.28 0 005.58 2.15V11.7a4.79 4.79 0 01-3.77-1.24V6.69h3.77z"/></svg>
              </a>
            {%- endif -%}
            {%- if settings.social_twitter_link != blank -%}
              <a href="{{ settings.social_twitter_link }}" class="r2p-footer__social-link" aria-label="X / Twitter" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </a>
            {%- endif -%}
            {%- if settings.social_facebook_link != blank -%}
              <a href="{{ settings.social_facebook_link }}" class="r2p-footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <a href="{{ settings.social_youtube_link }}" class="r2p-footer__social-link" aria-label="YouTube" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              </a>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
              <a href="{{ settings.social_pinterest_link }}" class="r2p-footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12.017 24c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/></svg>
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      <!-- Dynamic block columns (link lists, text, etc.) -->
      {%- for block in section.blocks -%}
        <div class="r2p-footer__column" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}

            {%- when 'link_list' -%}
              {%- if block.settings.heading != blank -%}
                <h2 class="r2p-footer__column-heading">{{ block.settings.heading }}</h2>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="r2p-footer__links">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="r2p-footer__link{% if link.active %} r2p-footer__link--active{% endif %}">
                        {{ link.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

            {%- when 'text' -%}
              {%- if block.settings.heading != blank -%}
                <h2 class="r2p-footer__column-heading">{{ block.settings.heading }}</h2>
              {%- endif -%}
              <div class="r2p-footer__text" style="font-family: var(--font-body); font-size: 0.875rem; color: var(--r2p-muted); line-height: 1.6;">
                {{ block.settings.subtext }}
              </div>

            {%- when 'brand_information' -%}
              {%- if settings.brand_image != blank -%}
                {%- assign brand_image_height = settings.brand_image_width | divided_by: settings.brand_image.aspect_ratio -%}
                <div style="max-width: min(100%, {{ settings.brand_image_width }}px); margin-bottom: 16px;">
                  {{ settings.brand_image | image_url: width: 1100 | image_tag: loading: 'lazy', widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100', height: brand_image_height, width: settings.brand_image_width }}
                </div>
              {%- endif -%}
              {%- if settings.brand_headline != blank -%}
                <h2 class="r2p-footer__column-heading">{{ settings.brand_headline }}</h2>
              {%- endif -%}
              {%- if settings.brand_description != blank -%}
                <div style="font-family: var(--font-body); font-size: 0.875rem; color: var(--r2p-muted); line-height: 1.6;">
                  {{ settings.brand_description }}
                </div>
              {%- endif -%}
              {%- if block.settings.show_social and has_social_icons -%}
                {%- render 'social-icons', class: 'footer__list-social' -%}
              {%- endif -%}

            {%- when 'image' -%}
              <div class="r2p-footer__image {{ block.settings.alignment }}">
                {%- if block.settings.image != blank -%}
                  {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                  <div style="max-width: min(100%, {{ block.settings.image_width }}px);">
                    <img
                      srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}, {{ block.settings.image | image_url: width: image_size_2x }} 2x"
                      src="{{ block.settings.image | image_url: width: 760 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                    >
                  </div>
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}

      <!-- Connect Column (Newsletter) -->
      {%- if section.settings.newsletter_enable -%}
        <div class="r2p-footer__column">
          <h2 class="r2p-footer__column-heading">{{ section.settings.newsletter_heading | default: 'Newsletter' }}</h2>
          {%- form 'customer', id: 'ContactFooter', class: 'r2p-footer__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="r2p-footer__newsletter-input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              placeholder="Email"
              required
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
            >
            <button type="submit" class="r2p-footer__newsletter-btn" aria-label="Subscribe">
              Go
            </button>
          {%- endform -%}
          {%- if form.posted_successfully? -%}
            <p class="r2p-footer__newsletter-success" id="ContactFooter-success">You're in.</p>
          {%- endif -%}
          {%- if form.errors -%}
            <p class="r2p-footer__newsletter-error" id="ContactFooter-error">
              {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
            </p>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    <!-- Bottom Bar -->
    <div class="r2p-footer__bottom">
      <div class="r2p-footer__bottom-inner">
        <div class="r2p-footer__copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: routes.root_url }}. All rights reserved.
        </div>

        {%- if section.settings.show_policy -%}
          <ul class="r2p-footer__policies">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        {%- if section.settings.payment_enable -%}
          <div class="r2p-footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 or section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
        <div class="r2p-footer__localization" style="margin-top: 16px; display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
            <localization-form>
              {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                <div>
                  <h2 id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                  {%- render 'country-localization', localPosition: 'FooterCountry' -%}
                </div>
              {%- endform -%}
            </localization-form>
          {%- endif -%}

          {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
            <localization-form>
              {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
                <div>
                  <h2 id="FooterLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                  {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
                </div>
              {%- endform -%}
            </localization-form>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "R2P Footer",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Shop",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "brand_information",
      "name": "Brand information",
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.footer.blocks.brand_information.settings.paragraph.content"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "Show social icons"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Share information about your brand.</p>",
