<!-- R2P Newsletter Signup -->
<style>
  .r2p-newsletter {
    padding: 80px 0;
    background: var(--r2p-surface);
  }

  .r2p-newsletter__inner {
    text-align: center;
    max-width: 560px;
    margin: 0 auto;
  }

  .r2p-newsletter__label {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--r2p-accent);
    margin-bottom: 16px;
  }

  .r2p-newsletter__heading {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-style: italic;
    line-height: 1.1;
    color: var(--r2p-text);
    margin-bottom: 12px;
  }

  .r2p-newsletter__body {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--r2p-muted);
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .r2p-newsletter__form {
    display: flex;
    gap: 0;
    max-width: 480px;
    margin: 0 auto;
  }

  .r2p-newsletter__input {
    flex: 1;
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--r2p-text);
    background: transparent;
    border: 1px solid var(--r2p-border);
    border-right: none;
    border-radius: 0;
    padding: 14px 16px;
    outline: none;
    transition: border-color var(--duration-hover) var(--ease-out-expo);
  }

  .r2p-newsletter__input:focus {
    border-color: var(--r2p-accent);
  }

  .r2p-newsletter__input::placeholder {
    color: var(--r2p-muted);
  }

  .r2p-newsletter__submit {
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    background: var(--r2p-accent);
    color: var(--r2p-black);
    border: 1px solid var(--r2p-accent);
    border-radius: 0;
    padding: 14px 24px;
    cursor: pointer;
    transition: background var(--duration-hover) var(--ease-out-expo);
    white-space: nowrap;
  }

  .r2p-newsletter__submit:hover {
    background: #b8ee00;
  }

  .r2p-newsletter__success {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--r2p-accent);
    margin-top: 16px;
  }

  .r2p-newsletter__error {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: #ff4444;
    margin-top: 16px;
  }

  @media screen and (max-width: 549px) {
    .r2p-newsletter__form {
      flex-direction: column;
    }

    .r2p-newsletter__input {
      border-right: 1px solid var(--r2p-border);
      border-bottom: none;
    }

    .r2p-newsletter__input:focus {
      border-color: var(--r2p-accent);
    }
  }

  @media screen and (min-width: 750px) {
    .r2p-newsletter {
      padding: 120px 0;
    }
  }
</style>

<section class="r2p-newsletter" aria-label="Newsletter signup">
  <div class="r2p-page-width">
    <div class="r2p-newsletter__inner r2p-reveal">
      <p class="r2p-newsletter__label">{{ section.settings.label | default: 'Stay Connected' }}</p>
      <h2 class="r2p-newsletter__heading">{{ section.settings.heading | default: 'Get early access.' }}</h2>
      <p class="r2p-newsletter__body">{{ section.settings.body_text | default: 'Drops, restocks, and culture updates. No spam, just signal.' }}</p>

      {%- form 'customer', id: 'R2PNewsletter', class: 'r2p-newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="r2p-newsletter__input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
          required
          {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="R2PNewsletter-error"
          {% elsif form.posted_successfully? %}
            aria-describedby="R2PNewsletter-success"
          {% endif %}
        >
        <button type="submit" class="r2p-newsletter__submit">
          {{ section.settings.button_text | default: 'Subscribe' }}
        </button>
      {%- endform -%}

      {%- if form.posted_successfully? -%}
        <p class="r2p-newsletter__success" id="R2PNewsletter-success">You're in. Watch your inbox.</p>
      {%- endif -%}

      {%- if form.errors -%}
        <p class="r2p-newsletter__error" id="R2PNewsletter-error">
          {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
        </p>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "R2P Newsletter",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Stay Connected"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get early access."
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body text",
      "default": "Drops, restocks, and culture updates. No spam, just signal."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "R2P Newsletter"
    }
  ]
}
{% endschema %}
