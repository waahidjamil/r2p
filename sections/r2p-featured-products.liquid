<!-- R2P Featured Products Grid -->
<style>
  .r2p-products {
    padding: 80px 0;
    background: var(--r2p-bg);
  }

  .r2p-products__header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 48px;
  }

  .r2p-products__label {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--r2p-accent);
    margin-bottom: 12px;
  }

  .r2p-products__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-style: italic;
    line-height: 1.1;
    color: var(--r2p-text);
    margin: 0;
  }

  .r2p-products__view-all {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--r2p-muted);
    text-decoration: none;
    white-space: nowrap;
    padding-bottom: 4px;
    border-bottom: 1px solid var(--r2p-border);
    transition: all var(--duration-hover) var(--ease-out-expo);
    flex-shrink: 0;
  }

  .r2p-products__view-all:hover {
    color: var(--r2p-accent);
    border-color: var(--r2p-accent);
  }

  .r2p-products__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media screen and (min-width: 550px) {
    .r2p-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .r2p-products {
      padding: 120px 0;
    }

    .r2p-products__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
  }
</style>

<section class="r2p-products" aria-label="Featured products">
  <div class="r2p-page-width">
    <div class="r2p-products__header r2p-reveal">
      <div>
        <p class="r2p-products__label">{{ section.settings.label | default: 'Featured' }}</p>
        <h2 class="r2p-products__title">{{ section.settings.heading | default: 'Latest Pieces' }}</h2>
      </div>
      {%- if section.settings.collection != blank -%}
        <a href="{{ section.settings.collection.url }}" class="r2p-products__view-all">View All</a>
      {%- endif -%}
    </div>

    <div class="r2p-products__grid">
      {%- if section.settings.collection != blank -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <div class="r2p-reveal r2p-reveal-delay-{{ forloop.index | modulo: 3 | plus: 1 }}">
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: 'portrait',
              show_secondary_image: true,
              section_id: section.id,
              quick_add: 'standard'
            %}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..6) -%}
          <div class="r2p-reveal r2p-reveal-delay-{{ forloop.index | modulo: 3 | plus: 1 }}">
            {% render 'card-product',
              media_aspect_ratio: 'portrait',
              section_id: section.id
            %}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "R2P Featured Products",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Featured"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Pieces"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 3,
      "label": "Products to show",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "R2P Featured Products"
    }
  ]
}
{% endschema %}
